<div class="container">
<div class="row justify-content-center">
<div class="col-6">
<p><%= link_to "Back to Book Details", book_path(@book) %></p>
<h4>Book <%= @book.title %></h4>
 <%= simple_form_for [@book, @booking] do |f| %>
 <%= f.input :preferred_pickup_location, placeholder: "Enter a prefered pick up location", input_html: { class: "custom-form-input" }  %>
 <%= f.input :renting_period, collection: ['2 weeks', '3 weeks', '4 weeks', '5 weeks'],
     prompt: 'Select condition', input_html: { class: 'form-control' }, input_html: { class: "custom-form-input" }  %>
     <%= f.submit class: "btn btn-flat" %>
  <% end %>
</div>
</div>
</div>

