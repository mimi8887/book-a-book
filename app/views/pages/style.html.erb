<%# SEARCH %>
<div class="container-bar">
  <div class="tap-bar">
    <ul class="list-inline tabs-underlined">
      <li>
        <a href="#" class="tab-underlined active">My books</a>
      </li>
      <li>
        <a href="#" class="tab-underlined active">My offers</a>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <a class="btn btn-flat" href="#">Search </a>
    </div>
  </form>
</div>

<%# NAV BAR %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <%= image_tag "logo.png", alt: "Logo", width: 120, height: 24 %>
      <%# <img src="/app/assets/images/logo.jpg" /> %>
    </a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%# <li class="btn-ghost">Offer a book</li> %>
              <%= link_to "Offer a book", new_book_path, data: {turbo_method: :get}, class: "nav-link btn-ghost" %>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">My profile</a>
            </li>
            <li class="nav-item active">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
            </li>
          <% else  %>
            <li class="nav-item">
              <%# <a class="nav-link" href="#">Sign in</a> %>
              <%= link_to "Offer a book", new_user_session_path, data: {turbo_method: :get}, class: "nav-link btn-ghost" %>
            </li>
            <li class="nav-item active">
              <%= link_to "Sign in", new_user_session_path, data: {turbo_method: :get}, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>


