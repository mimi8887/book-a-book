<div class="Container">
  <div class="mx-5">
    <%= link_to 'Back to Homepage', root_path%>
    <% if @user == current_user %>
      <h4>My profile</h4>
      <p><%= @user.first_name %> <%= @user.last_name %></p>

      <h2>My offers</h2>
        <% @user.books.each do |book| %>
        <ul>
        <li><%= link_to book.title, book_path(book) %>
        <p><%= book.author %></p></li>
        </ul>
        <% end %>

      <h2>My requests</h2>
      <% @user.bookings.each do |booking| %>
      <ul><li><%= link_to booking.book.title, book_path(booking.book) %>
            <p><%= booking.book.author %></p></li>
      </ul>
      <% end %>

    <% else %>
      <div>
        <h4><%= @user.first_name %>'s profile</h4>
        <div class="d-flex">
          <%= render "shared/avatar" %>
          <p><%= @user.first_name %> <%= @user.last_name %></p>
        </div>
      </div>
      <h5><%= @user.first_name %>'s offers</h5>
      <% @user.books.each do |book| %>
        <div class="cards_container">
          <div class="card-offers card-content">
            <h6><%= book.title %></h6>
            <p><strong>Conditions: </strong><%= book.condition %></p>
            <p><%= link_to "Request this book", new_book_booking_path(book), class: "btn btn-flat"  %></p>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
