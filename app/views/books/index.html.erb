<div class="m-5">
<h1>Welcome!</h1>
  <% @books.each do |book| %>
    <%= cl_image_tag book.photo.key, height: 300, crop: :fill %>
    <h2><%= link_to book.title, book_path(book) %></h2>
    <p><strong>Author:</strong> <%= book.author %></p>
    <p><strong>Description:</strong> <%= book.description %></p>
    <p><%= link_to "#{book.user.first_name} #{book.user.last_name}", user_dashboard_path(book.user) %></p>
    <p><%= link_to "Request this book", new_book_booking_path(book) %></p>
<% end %>
</div>
  </div>
  </div>
