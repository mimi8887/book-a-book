<div class="container">
<div class="d-flex justify-content-center">
<div class="col-lg-6 my-5">

<h4>Offer a book</h4>
  <%= simple_form_for @book do |f| %>
    <%= f.input :title, placeholder: 'title', input_html: { class: "custom-form-input" } %>
    <%= f.input :author, placeholder: 'author', input_html: { class: "custom-form-input" } %>
    <%= f.input :description, placeholder: 'description', input_html: { class: "custom-form-input" } %>
    <%= f.input :condition, collection: ['Poor', 'Used', 'Good', 'Brand New'],
     prompt: 'Select condition', input_html: { class: 'form-control' }, input_html: { class: "custom-form-input" } %>
    <%= f.input :photo, as: :file, input_html: { class: "custom-form-input" } %>
    <%= f.submit class: "btn btn-flat" %>

<% end %>
</div>
</div>
</div>
