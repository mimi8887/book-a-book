<div class="container">

  <h4>Book Details</h4>
  <div class="book-detail d-flex justify-content-between ">
    <div class="card-product_book">
      <div>
        <%= image_tag "book1.png"%>
      </div>
      <div class="my-3">
        <h5><%= @book.title %></h5>
      </div>
        <% if @book.published_at.present? %>
          <p><strong>Published on:</strong> <%= @book.published_at.strftime("%B %d, %Y") %></p>
        <% end %>
    </div>
    <div>
      <h5><strong>Description:</strong> </h5>
      <p><%= @book.description %></p>
      <p><strong>Author:</strong> <%= @book.author %></p>
    </div>
  </div>


      <h3>Reviews:</h3>
      <% @book.reviews.each do |review|%>
      <ul><li>
        <%= review.content %>
        <%= link_to  review.user.first_name, "" %>
      </li></ul>
      <% end %>

        <%= link_to 'Back to List', root_path%>
        <p><%= link_to "Request this book", new_book_booking_path(@book) %></p>
</div>
