
<div class="container">
<div class="row justify-content-center">
<div class="col-6">
<h4>Log in</h4>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs my-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "custom-form-input" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "custom-form-input"} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>


  <div class="form-actions button" >
    <%= f.button :submit, "Log in", class: "btn-flat" %>
      </div>
      <div class="link-text">
        <p>If you don't have an account yet, please
        <%= link_to "sign up", new_user_registration_path  %>
        </p>
    <% end %>
      </div>
    </div>
  </div>
</div>
